@model IEnumerable<PizzaProject1.Models.OrderEntry>

@{
    ViewData["Title"] = "Admin - Show Order Details";
}
<div class="text-center">
    <h1>Order Details</h1>
</div>

<p class="return-link">
    @Html.ActionLink("<< Back to Location's Orders", "LocationOrders", new { id = Model.FirstOrDefault().OrderDetails.Location })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaDetails.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaDetails.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pizza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PizzaDetails.Name)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.PizzaDetails.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Subtotal)
                </td>
            </tr>
        }
    </tbody>
</table>
